{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "outDir": "types",
    "baseUrl": ".",
    "paths": {
      "react-js-library": ["./src/index.js"],
      "react-js-library-new/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types-autogen",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/App.*",
    "src/main.*",
    "src/tools/classes/EventEmitter.js",
    "scripts"
  ]
}
